@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h1>Add a flavor profile to this treat:</h1>
<hr>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Treat")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" class="btn btn-default" />
}
<p>If you aren't able to find a flavor profile that fits your baked good, you can @Html.ActionLink("add a flavor profile here.", "Create", "Flavors")</p>