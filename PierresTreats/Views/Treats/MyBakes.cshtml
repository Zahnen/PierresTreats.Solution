@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Treat>;

<h1>My Baked Goods</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No baked goods have been added to your Sous Chef profile. Add one with the button below.</h3>
}
@foreach (Treat treat in Model)
{
    <p><b>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</b></p>
}
<button type="button" class="btn btn-default">@Html.ActionLink("Add a baked good", "Create")</button>