@using System.Security.Claims

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sous Chef</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
  </head>
  <body>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="container-fluid">
      <div class="account-nav">
        <p>Logged in as @User.Identity.Name. <a href="/Account/">Sign out</a></p>
      </div>
    </div>
    }
    else
    {
    <div class="container-fluid">
      <div class="account-nav">
        <a class="login-link" href="/Account/Login">Sign in</a> or <a class="login-link" href="/Account/Register">Create Account</a>
      </div>
    </div>
    }
    <a href="/"><img class="header-image" src="~/img/Sous.png"></a>
    <div class="container-fluid">
      <div class="header-links">
          <a class="feature-link" href="/Treats">Treats</a>
          <a class="feature-link" href="/Flavors">Flavor Profiles</a>
          <a class="feature-link" href="/Directory/">Directory</a>
          <a class="feature-link" href="/Account/">Account</a>
        </div>
    </div>
    <div class="container">
    @RenderBody()
    </div>
  </body>
</html>