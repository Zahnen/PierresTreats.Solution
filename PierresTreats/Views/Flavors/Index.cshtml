@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavor Profiles</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No flavor profiles have been added to Sous Chef. Add one with the button below.</h3>
}
@foreach (Flavor flavor in Model)
{
    <p><b>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</b></p>
}
<button type="button" class="btn btn-default">@Html.ActionLink("Add a flavor", "Create")</button>